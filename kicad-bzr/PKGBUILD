pkgname=kicad-bzr
pkgver=4935
pkgrel=1
pkgdesc="Electronic schematic and printed circuit board (PCB) design tools"
arch=('i686' 'x86_64')
url="http://kicad-pcb.org/"
license=('GPL')
depends=('glu' 'wxgtk' 'hicolor-icon-theme' 'desktop-file-utils')
makedepends=('cmake' 'bzr' 'bzrtools' 'zlib' 'mesa')
optdepends=('kicad-docs-bzr: for documentation' 
            'kicad-library-bzr: for footprints')
conflicts=('kicad')
provides=('kicad')
install=kicad.install
source=('bzr+lp:kicad')
#source=('bzr+lp:~cern-kicad/kicad/drawing_tool')
md5sums=('SKIP')
_bzrmod=${source[0]##*[:/]}

BUILDENV=(ccache)

pkgver() {
  cd "$srcdir/$_bzrmod"
  bzr revno --tree
}

prepare() {
  cd "$srcdir/$_bzrmod"
  msg2 "Patching..."
  patch -p0 -i ../../3d_draw.patch


  bzr revno --tree
  bzr update -r$pkgver
  bzr revno --tree
}

build() {
  # python3 incompatibility hax (not really needed when we can't build
	# with python scripting)
#  mkdir -p $srcdir/bin                                                          
# ln -s -f /usr/bin/python2 $srcdir/bin/python                                  
#  export PATH=$srcdir/bin:$PATH                                                 
# python --version            

  cd "$srcdir/$_bzrmod"
  echo $source
  echo ${source[0]##*/}
  echo $_bzrmod
  sleep 10
  bzrnick=$(bzr nick)
  mkdir -p build/Release
  cd build/Release
	#export CC=clang
	#export CXX=clang++
	#export CC=gcc-4.4
	#export CXX=c++-4.4
  #cmake ../.. -DKICAD_STABLE_VERSION=ON        \
  cmake ../.. -DCMAKE_BUILD_TYPE=Debug      \
              -DUSE_IMAGES_IN_MENUS=ON        \
              -DBUILD_GITHUB_PLUGN=ON        \
              -DKICAD_SCRIPTING=OFF            \
              -DKICAD_SCRIPTING_MODULES=OFF    \
              -DKICAD_SCRIPTING_WXPYTHON=OFF   \
              -DKICAD_BUILD_STATIC=OFF        \
              -DKICAD_BUILD_DYNAMIC=OFF       \
              -DKICAD_SKIP_BOOST=ON           \
              -DKICAD_REPO_NAME=$bzrnick      \
              -DCMAKE_INSTALL_PREFIX=/usr


  #-DKICAD_BUILD_STATIC=ON   fails with the glew lib error make[2]:
  #*** No rule to make target '../../glew_root/lib/libGLEW.a', needed
  #by 'cvpcb/cvpcb'.  Stop.

  # Remember to remind Mdx4 about the glew lib/lib64 thing after he
  # is finsihed with the wxpython stuff he is doing

  # Hax that makes it possible to build with scripting
# sed -i 's/3.3m/2.7/g' CMakeCache.txt

  make -j4
  #VERBOSE=1 make -j1
}

package() {
  cd "$srcdir/$_bzrmod/build/Release"
  make DESTDIR="$pkgdir" install

  wget -q	https://raw.githubusercontent.com/KiCad/kicad-library/master/template/fp-lib-table.for-github	\
		   -O "$pkgdir/usr/share/kicad/template/fp-lib-table.for-github"

  mkdir -p "$pkgdir/etc/profile.d"
  echo "export KIGITHUB=https://github.com/KiCad" > "$pkgdir/etc/profile.d/kicad.sh"
}
