# Maintainer: Nick Ã˜stergaard <oe.nick at gmail.com>

pkgname=python2-oauth
pkgver=1.0.1
pkgrel=1
_libname=${pkgname/python2-/}
pkgdesc="Library for OAuth version 1.0a."
arch=(any)
url="https://github.com/simplegeo/python-oauth2"
license=('MIT')
makedepends=(python2-setuptools)
source=(https://pypi.python.org/packages/source/o/$_libname/$_libname-$pkgver.tar.gz)
md5sums=('30ed3cc8c11d7841a89feab437aabf81')

build() {
	cd "$srcdir/$_libname-$pkgver"
	python2 setup.py build
}

package() {
	cd "$srcdir/$_libname-$pkgver"
	python2 setup.py install --skip-build -O1 --root="$pkgdir"
	rm -rf "$pkgdir"/usr/lib/python*/site-packages/tests
}

